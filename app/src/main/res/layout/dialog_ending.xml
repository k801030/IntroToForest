<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog.ending.title"
        android:textColor="@color/text"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog.ending.content"
        android:textColor="@color/text"
        android:layout_margin="3dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/restart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:textColor="@color/white"
            android:text="@string/dialog.ending.restart_btn"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/reload"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            />

        <Button
            android:id="@+id/quit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:textColor="@color/white"
            android:text="@string/dialog.ending.quit_btn"
            android:layout_margin="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:drawableLeft="@drawable/exit"

            />
    </LinearLayout>

</LinearLayout>